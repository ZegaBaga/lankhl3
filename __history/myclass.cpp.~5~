	 //query+=",'"+fio+"','"+phone+"','"+email+"','"+adress+"','"+ip+"','"+fullname+"')" ;
	}
	ado->SQL->Clear();
	ado->SQL->Add(query);
	ado->ExecSQL();
	ado->Close();

}
